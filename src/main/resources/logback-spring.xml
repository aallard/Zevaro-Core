<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <property name="LOG_PATH" value="${LOG_PATH:-${user.home}/Documents/Github/logs}"/>
    <property name="LOG_FILE" value="${LOG_PATH}/zevaro-core"/>

    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Rolling file appender with size and time limits -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- CRITICAL: Separate Kafka log file with strict size limits -->
    <appender name="KAFKA_RATE_LIMITED" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}-kafka.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}-kafka.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>3</maxHistory>
            <totalSizeCap>50MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <!-- Only log WARN and above -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
    </appender>

    <!-- Kafka client loggers - reduced to ERROR and separate file -->
    <logger name="org.apache.kafka" level="ERROR" additivity="false">
        <appender-ref ref="KAFKA_RATE_LIMITED"/>
    </logger>
    <logger name="org.apache.kafka.clients.NetworkClient" level="ERROR" additivity="false">
        <appender-ref ref="KAFKA_RATE_LIMITED"/>
    </logger>
    <logger name="org.apache.kafka.clients.producer" level="ERROR" additivity="false">
        <appender-ref ref="KAFKA_RATE_LIMITED"/>
    </logger>
    <logger name="org.apache.kafka.clients.producer.internals" level="ERROR" additivity="false">
        <appender-ref ref="KAFKA_RATE_LIMITED"/>
    </logger>

    <!-- Spring Kafka - reduced verbosity -->
    <logger name="org.springframework.kafka" level="WARN"/>

    <!-- Application loggers -->
    <logger name="ai.zevaro.core" level="INFO"/>
    <logger name="ai.zevaro.core.config.KafkaProducerService" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
